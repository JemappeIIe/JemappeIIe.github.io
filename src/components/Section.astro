---
// props: title (string), subtitle (string), id (string), aside (boolean)
// Usage: <Section title="X" subtitle="Y" aside>...<slot name="aside">...</slot></Section>
const { title = "", subtitle = "", id, aside = false } = Astro.props;
---

<section id={id} class="section-root">
    <div class="mx-5 sm:mx-10">
        <div class="section-surface">
            <header class="mb-2.5">
                {title && <h2 class="section-title">{title}</h2>}
                {subtitle && <p class="section-subtitle">{subtitle}</p>}
            </header>
            <div class="section-content">
                <slot />
            </div>
        </div>
    </div>
</section>
